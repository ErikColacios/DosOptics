import CallToAction from "../components/CallToAction.astro";
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Dos Òptics | Taps auditius">
    <Hero title1="Vine a la nostra botiga" title2="a Sabadell" backgroundImage="nosaltres/botiga.jpg" text="Estem a la carretera de Terrassa (zona de fàcil aparcament). Fes-nos una visita i explica'ns el que busques, estarem encantats d’ajudar-te, ja sigui si busques unes ulleres noves, necessites una revisió (optomètrica o audiològica) o bé si tens alguna consulta específica."/>
    <section class="flex bg-[#F6F6F6]">
        <div class="flex flex-col justify-center space-y-8 w-1/2 p-8 pl-20">
            <div class="flex flex-col">
                <b>Direcció</b>
                <p>Carretera de Terrassa, 389 - 08205</p>
                <p>Sabadell BCN</p>
            </div>
            <div class="flex flex-col">
                <b>Telèfons</b>
                <p>93 727 67 71</p>
                <p>640 23 28 10</p>
            </div>
            <div class="flex flex-col">
                <b>Correu electrònic</b>
                <p>info@dosoptics.com</p>
            </div>
            <div class="flex flex-col">
                <div class="flex items-center space-x-2">
                    <svg fill="#000000" height="24px" width="24px" version="1.1" id="Icon" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 24 24" enable-background="new 0 0 24 24" xml:space="preserve"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <g id="WA_Logo"> <g> <path fill-rule="evenodd" clip-rule="evenodd" d="M20.5,3.5C18.25,1.25,15.2,0,12,0C5.41,0,0,5.41,0,12c0,2.11,0.65,4.11,1.7,5.92 L0,24l6.33-1.55C8.08,23.41,10,24,12,24c6.59,0,12-5.41,12-12C24,8.81,22.76,5.76,20.5,3.5z M12,22c-1.78,0-3.48-0.59-5.01-1.49 l-0.36-0.22l-3.76,0.99l1-3.67l-0.24-0.38C2.64,15.65,2,13.88,2,12C2,6.52,6.52,2,12,2c2.65,0,5.2,1.05,7.08,2.93S22,9.35,22,12 C22,17.48,17.47,22,12,22z M17.5,14.45c-0.3-0.15-1.77-0.87-2.04-0.97c-0.27-0.1-0.47-0.15-0.67,0.15 c-0.2,0.3-0.77,0.97-0.95,1.17c-0.17,0.2-0.35,0.22-0.65,0.07c-0.3-0.15-1.26-0.46-2.4-1.48c-0.89-0.79-1.49-1.77-1.66-2.07 c-0.17-0.3-0.02-0.46,0.13-0.61c0.13-0.13,0.3-0.35,0.45-0.52s0.2-0.3,0.3-0.5c0.1-0.2,0.05-0.37-0.02-0.52 C9.91,9.02,9.31,7.55,9.06,6.95c-0.24-0.58-0.49-0.5-0.67-0.51C8.22,6.43,8.02,6.43,7.82,6.43S7.3,6.51,7.02,6.8 C6.75,7.1,5.98,7.83,5.98,9.3c0,1.47,1.07,2.89,1.22,3.09c0.15,0.2,2.11,3.22,5.1,4.51c0.71,0.31,1.27,0.49,1.7,0.63 c0.72,0.23,1.37,0.2,1.88,0.12c0.57-0.09,1.77-0.72,2.02-1.42c0.25-0.7,0.25-1.3,0.17-1.42C18,14.68,17.8,14.6,17.5,14.45z"></path> </g> </g> </g></svg>
                    <b>What’s App</b>
                </div>
                <p>+34 640 23 28 10</p>
            </div>
        </div>
        <div class="w-1/2">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1055.7014190805262!2d2.0840156560376584!3d41.548148728704554!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12a4948c940f810b%3A0x4e4100ada8e9c543!2sDos%20%C3%92ptics!5e0!3m2!1ses!2ses!4v1751897533194!5m2!1ses!2ses" style="width: 100%; height: 600px" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </section>

    <section class="relative flex flex-col sm:flex-row justify-center items-center space-x-8 lg:space-x-24 p-8 lg:p-20 w-full min-h-[500px] bg-cover bg-center" style=`background-image: url(/imgs/nosaltres/sala_general.jpg)`>
        <div class="flex flex-col items-center absolute top-0 bg-black/50 text-white w-full h-full p-4 md:p-12 justify-center">
            <h2 class="pb-8 lg:pb-14 text-4xl md:text-5xl">El nostre <span class="main_green_text font-black">horari</span></h2>
            <div class="flex space-x-8">
                <div class="flex flex-col">
                    <b>Dilluns a divendres</b>
                    <p>10:00 - 13:15<br>
                    <p>17:00 - 20:30<br>
                </div>
                <div class="flex flex-col">
                    <b>Dissabtes</b>
                    <p>10:00 - 14:00<br>
                </div>
            </div>
            <p class="text-center pt-8">Fem horari de matins i tardes entre setmana. Dissabte tanquem a la tarda.</p>
        </div>
    </section>

    <section class="flex flex-col justify-center text-center items-center bg-[#F6F6F6] min-h-[550px] pt-20 pb-20">
        <div class="w-1/2">
            <h2 class="text-4xl pb-6 md:text-5xl">Dona una ullada a les nostres xarxes socials!</h2>
            <p>Si no ens pots visitar físicament, també ho pots fer a través del nostre Facebook o Instagram, on podràs veure més novetats del nostre dia a dia, 
                així com contingut interessant sobre el món de la òptica i l'audiologia.</p>
        </div>
        <div class="flex space-x-4 pt-8">
            <button class="main_button">Instagram</button>
            <button class="main_button">Facebook</button>
        </div>

    </section>
</Layout>